<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bmi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.8"
        android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/hint_black">

        <LinearLayout
            android:layout_width="1.9in"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Want to Check"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bmi"
                    android:layout_width="1.9in"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="BMI (Body Mass Index)"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/bmr"
                    android:layout_width="1.9in"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="BMR (Basal Metabolic Rate)"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/bsi"
                    android:layout_width="1.9in"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="BSI (Body Surface Area)"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/water"
                    android:layout_width="1.9in"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Water Intake"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:cornerRadius="5dp" />
                
                <Button
                    android:id="@+id/calories"
                    android:layout_width="1.9in"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Calories Burned"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:cornerRadius="5dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>








</LinearLayout>