<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:alpha="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is The Statement Correct?"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:layout_marginLeft="30dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/val_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:inputType="number"
                android:textSize="40sp"
                android:background="@color/black"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/val_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="40sp"
                android:background="@color/black"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" = "
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/val_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="40sp"
                android:background="@color/black"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <Button
                android:id="@+id/button_yes"
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_margin="20dp"
                app:cornerRadius="0dp"
                android:backgroundTint="@color/black"/>

            <Button
                android:id="@+id/button_no"
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_margin="20dp"
                app:cornerRadius="0dp"
                android:backgroundTint="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Click on the Yes or No button"
            android:textSize="25sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:id="@+id/all_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/score_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    ||    "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/life_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life: "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/life_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>





</LinearLayout>