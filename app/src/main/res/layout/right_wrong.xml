<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:alpha="0.85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is The Statement Correct?"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:layout_marginLeft="30dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/val_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:inputType="number"
                android:text="50"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/val_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="40sp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" = "
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/val_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="40sp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/hint_black"
                app:cardElevation="10dp"
                android:outlineSpotShadowColor="@color/green"
                app:cardCornerRadius="10dp">
                <Button
                    android:id="@+id/button_yes"
                    android:layout_width= "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YES"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/black"

                    android:shadowDx="3.5"
                    android:shadowDy="3.5"
                    android:shadowRadius="3.5"
                    android:shadowColor="@color/green"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/hint_black"
                app:cardElevation="10dp"
                android:outlineSpotShadowColor="@color/red"
                app:cardCornerRadius="10dp">
                <Button
                    android:id="@+id/button_no"
                    android:layout_width= "wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/black"

                    android:shadowDx="3.5"
                    android:shadowDy="3.5"
                    android:shadowRadius="3.5"
                    android:shadowColor="@color/red"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Click on the Yes or No button"
            android:textSize="25sp"
            android:textStyle="italic"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/hint_black"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:id="@+id/all_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <TextView
                    android:id="@+id/score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: "
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/score_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    ||    "
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/life_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Life: "
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/life_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>





</LinearLayout>